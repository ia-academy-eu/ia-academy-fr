    min-height:calc(50vh - 100px);
    padding:50px;
}
grid-body{
    display:grid;
    max-width:900px;
    padding:var(--web-padding);
    gap:var(--web-gap);
    margin: 0 auto;
    
}

section {
    position: relative;
    z-index: 0;
    display: grid;
    position: relative;
    overflow: hidden;
    
}
section h1 {
