    display:grid;
    max-width:900px;
    padding:var(--web-padding);
    gap:var(--web-gap);
    margin: 0 auto;
    
}

:root {
    --web-outline : 2px solid white;
    --web-outine-offset : 2px;
    --web-shadow : 0 1px 3px 0 rgba(0, 0, 0, .1), 0 1px 2px -1px rgba(0, 0, 0, .1);
    --web-padding : 5px;
    --web-gap: 5px;
    --web-border: 1px solid white;
    --web-border-radius: 5px;
  }

*, :after, :before {
    box-sizing: border-box;
    border: 0 solid #e5e7eb;
}
grid-page{
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    display:block;
    background:none;
    min-height:100%;
    margin-bottom:100px;
}
grid-body{
    display:grid;
    max-width:900px;
    padding:var(--web-padding);
    gap:var(--web-gap);
    margin: 0 auto;
}

#grid-body section,
#resultHTML section {
    position: relative;
    z-index: 0;
    display: block;
    position: relative;
    overflow: hidden;
    /* box-shadow:var(--web-shadow); */
}
#grid-body a,
#resultHTML a{
  color: #36c;
}


#grid-body h1,
#resultHTML h1 {
    font-size: clamp(1.5rem, 6vw, 2.125rem); /* Mobile: 1.5rem (24px), Desktop/Tablet: 2.125rem (34px) */
    line-height: 1; /* 34px */
    letter-spacing: -0.0625rem; /* -1px */
    font-weight: bold;
    color: #333;
    margin-top: 0;
    margin-bottom: 1.5rem;
}

#grid-body h2,
#resultHTML h2 {
    font-size: clamp(1.125rem, 5vw, 1.875rem); /* Mobile: 1.125rem (18px), Tablet: 1.5rem (24px), Desktop: 1.875rem (30px) */
    line-height: 1.067; /* 32px */
    letter-spacing: -0.05rem; /* -0.8px */
    font-weight: bold;
    color: #333;
    margin-top: 0;
    margin-bottom: 1.25rem;
}

#grid-body h3,
#resultHTML h3 {
    font-size: clamp(1.125rem, 4vw, 1.5rem); /* Mobile/Tablet: 1.125rem (18px), Desktop: 1.5rem (24px) */
    line-height: 1.083; /* 26px */
    letter-spacing: -0.0375rem; /* -0.5px */
    font-weight: bold;
    color: #333;
    margin-top: 0;
    margin-bottom: 1rem;
}

#grid-body h4,
#resultHTML h4 {
    font-size: clamp(1.125rem, 3.5vw, 1.25rem); /* Tablet: 1.125rem (18px), Desktop: 1.25rem (20px) */
    line-height: 1.1; /* 22px */
    letter-spacing: -0.025rem; /* -0.4px */
    font-weight: bold;
    color: #333;
    margin-top: 0;
    margin-bottom: 0.75rem;
}

#grid-body h5,
#resultHTML h5 {
    font-size: clamp(1rem, 3vw, 1.125rem); /* Tablet: 1rem (16px), Desktop: 1.125rem (18px) */
    line-height: 1.111; /* 20px */
    letter-spacing: -0.0125rem; /* -0.2px */
    font-weight: bold;
    color: #333;
    margin-top: 0;
    margin-bottom: 0.5rem;
}

#grid-body h6,
#resultHTML h6 {
    font-size: clamp(1rem, 2.5vw, 1rem); /* Mobile/Tablet: 1rem (16px), Desktop: 1rem (16px) */
    line-height: 1.125; /* 18px */
    letter-spacing: -0.00625rem; /* -0.1px */
    font-weight: bold;
    color: #333;
    margin-top: 0;
    margin-bottom: 0.5rem;
}


#grid-body p,
#resultHTML p {
    font-size: clamp(16px, 2.5vw, 18px);
    line-height: 1.6;
    color: #333;
    margin-top: 0;
    margin-bottom: 1rem;
}

#grid-body ul,
#resultHTML ul {
    color: #333;
    list-style: disc;
    list-style-position: inside;
    line-height: 1.6;
    margin-top: 0;
    margin-bottom: 1rem;
    padding-left: 1.25rem; /* Añade espacio a la izquierda */
}

#grid-body ol,
#resultHTML ol {
    color: #333;
    list-style-type: decimal;
    list-style-position: inside;
    line-height: 1.6;
    margin-top: 0;
    margin-bottom: 1rem;
    padding-left: 1.25rem; /* Añade espacio a la izquierda */
}
